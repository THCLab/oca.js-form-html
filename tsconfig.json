{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2021",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "sourceMap": true,
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "noErrorTruncation": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@tests/*": [ "./tests/*" ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node", "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
